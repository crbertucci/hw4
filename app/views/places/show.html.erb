<% if @current_user != nil %>

<h1><%= @place["name"] %></h1>

<h3>Posts by <%= @current_user["username"] %></h3>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-success">New Post</a>
</p>

<%end%>

<div class="row">
<% for entry in @entries %>
<div class="col-md-3">
  <h3><%= entry["title"] %></h3>
  <h4><%= entry["occurred_on"] %></h4>
  <p><%= entry["description"] %></p>
  </div>
<% end %>



<p>
  <a href="/places">Back to All Places</a>
</p>